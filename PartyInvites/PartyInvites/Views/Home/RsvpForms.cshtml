@model PartyInvites.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RsvpForms</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        //Lambdas used to reduce misspelling(Look into Lambdas)
        <p>Name: @Html.TextBoxFor(x => x.Name)</p>
        <p>Email: @Html.TextBoxFor(x => x.Email)</p>
        <p>Phone: @Html.TextBoxFor(x => x.Phone)</p>
        <p>
            Will you attend?
            @Html.DropDownListFor(x => x.WillAttend, new[]{
            new SelectListItem(){Text = "Yes", Value = bool.TrueString},
            new SelectListItem(){Text = "No", Value = bool.FalseString}} ,"Choose and Option")
        </p>
        
        <input type="submit" value="Submit RSVP" />
    }
</body>
</html>
